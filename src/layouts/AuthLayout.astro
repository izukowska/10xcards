---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="10x-cards Auth" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | 10x-cards</title>
    <style>
      /* Fallback styles simulating Tailwind Dark Mode/Shadcn */
      body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif;
        background-color: #09090b; /* bg-background (zinc-950) */
        color: #fafafa; /* text-foreground (zinc-50) */
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 1rem;
      }
      .auth-container {
        width: 100%;
        max-width: 28rem; /* max-w-md */
        background-color: #09090b; /* bg-card (same as background in some themes, or slightly lighter) */
        border: 1px solid #27272a; /* border-border (zinc-800) */
        border-radius: 0.75rem; /* rounded-xl */
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
        overflow: hidden;
      }
      .auth-content {
        padding: 2rem;
      }
      h1 {
        color: #fafafa;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
      }
      .project-info {
        font-size: 0.75rem;
        color: #52525b; /* zinc-600 */
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 500;
        text-align: center;
      }
    </style>
  </head>
  <body class="bg-background flex items-center justify-center min-h-screen p-4 font-sans antialiased text-foreground">
    <div class="auth-container w-full max-w-md bg-card text-card-foreground rounded-xl shadow-lg border border-border overflow-hidden">
      <div class="auth-content p-6 sm:p-8">
        <div class="text-center mb-8" style="text-align: center; margin-bottom: 2rem;">
          <h1 class="text-2xl font-bold tracking-tight">10x-cards</h1>
          <p class="subtitle text-sm text-muted-foreground mt-2">Nauka z mocÄ… AI</p>
        </div>
        <slot />
      </div>
    </div>
  </body>
</html>
