---
import "../styles/global.css";
import { Button } from "@/components/ui/button";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const { user } = Astro.locals;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="border-b bg-background border-border">
        <div class="container mx-auto flex h-16 items-center justify-between px-4">
          <div class="flex items-center gap-6">
            <a href="/" class="text-xl font-bold tracking-tight text-foreground">10x-cards</a>
          </div>
          <div class="flex items-center gap-3">
            {user && (
              <nav class="flex items-center gap-2 mr-4">
                <a 
                  href="/generate" 
                  class={`
                    px-4 py-2 rounded-lg text-sm font-medium transition-all
                    ${currentPath === '/generate' 
                      ? 'bg-primary text-primary-foreground shadow-md' 
                      : 'bg-primary/10 text-primary hover:bg-primary/20 border border-primary/20'
                    }
                  `}
                >
                  Generuj
                </a>
                <a 
                  href="/flashcards" 
                  class={`
                    px-4 py-2 rounded-lg text-sm font-medium transition-all
                    ${currentPath === '/flashcards' 
                      ? 'bg-primary text-primary-foreground shadow-md' 
                      : 'bg-primary/10 text-primary hover:bg-primary/20 border border-primary/20'
                    }
                  `}
                >
                  Moje fiszki
                </a>
              </nav>
            )}
            {user?.email && (
              <span class="text-sm text-muted-foreground hidden sm:inline-block">
                {user.email}
              </span>
            )}
            <form action="/api/auth/signout" method="POST">
              <Button variant="ghost" size="sm" type="submit">
                Wyloguj
              </Button>
            </form>
          </div>
        </div>
      </header>
      <main class="flex-1 bg-background text-foreground">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
